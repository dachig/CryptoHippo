generator Client {
    provider = "prisma-client.js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @map("_id")
    email     String   @unique
    name      String?
    avatar    String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
